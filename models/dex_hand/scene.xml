<mujoco model="left_hand_ball_scene">
  <compiler angle="radian" meshdir="assets" autolimits="true"/>
  <option cone="elliptic" impratio="10"/>

  <!-- Include left hand model -->
  <include file="left_hand.xml"/>
  
  <!-- Include ball object -->
  <include file="../object_manipulation/ball.xml"/>
  
  <!-- Global visual settings -->
  <visual>
    <rgba haze="0.15 0.25 0.35 1"/>
    <quality shadowsize="8192"/>
    <global azimuth="220" elevation="-30"/>
  </visual>

  <!-- Assets like textures and materials -->
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
             markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <!-- Lighting -->
    <light pos="0 0 1"/>
    <light pos="0.3 0 1.5" dir="0 0 -1" directional="true"/>

    <!-- Ground -->
    <geom name="floor" pos="0 0 -0.1" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- Position ball in the center where hand can reach it -->
    <body name="manipulation_ball" pos="0.2 0 0.05">
      <freejoint name="ball_freejoint"/>
      <geom name="ball_geom" 
            type="sphere" 
            size="0.025" 
            rgba="0.3 0.7 0.3 1"
            condim="6" 
            priority="1"
            friction="0.6 0.01 0.003"
            density="800"/>
      <inertial pos="0 0 0" mass="0.052" diaginertia="0.00003 0.00003 0.00003"/>
    </body>

    <!-- Position left hand -->
    <body name="left_hand_mount" pos="0 0 0">
      <!-- Left hand will be positioned at the origin -->
    </body>
  </worldbody>
</mujoco>
